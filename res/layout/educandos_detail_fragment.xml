<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="5dip"
    android:stretchColumns="1" >

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:layout_marginLeft="5dip"
            android:text="Nombre" />

        <EditText
            android:id="@+id/nameEducando"
            android:layout_width="match_parent"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:layout_marginLeft="5dip"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/surnameEducando"
            android:layout_width="match_parent"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:layout_marginLeft="5dip"
            android:text="Dirección" />

        <EditText
            android:id="@+id/dirEducando"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:layout_marginLeft="5dip"
            android:text="Cumpleaños" />

        <EditText
            android:id="@+id/educandoBirthday"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="date" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:text="Seccion" />

        <Spinner android:id="@+id/spinnerSeccion" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:text="Etapa" />

        <Spinner android:id="@+id/spinnerEtapa" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/list_selector_background" 
        android:clickable="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:text="Padres" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/list_selector_background" 
        android:clickable="true" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:text="Comunicaciones" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="executeDeleteCommand"
            android:text="Eliminar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="executeSaveCommand"
            android:text="Guardar" />
    </TableRow>

</TableLayout>