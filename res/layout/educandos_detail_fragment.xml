<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@android:drawable/gallery_thumb" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp" >

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:stretchColumns="1" >

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:id="@+id/nameText"
            android:layout_marginLeft="5dip"
            android:text="Nombre" />

        <EditText
            android:id="@+id/nameEducando"
            android:layout_width="match_parent"
            android:inputType="text" />

    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:id="@+id/surnameText"
            android:layout_marginLeft="5dip"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/surnameEducando"
            android:layout_width="match_parent"
            android:inputType="text" />

    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:id="@+id/dirText"
            android:layout_marginLeft="5dip"
            android:text="Dirección" />

        <EditText
            android:id="@+id/dirEducando"
            android:layout_width="match_parent"
            android:inputType="text" />

    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            android:id="@+id/birthdayText"
            android:layout_marginLeft="5dip"
            android:text="Cumpleaños" />

        <EditText
            android:id="@+id/educandoBirthday"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="date" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="E-mail" />

        <EditText
            android:id="@+id/educandoEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10" >
        </EditText>

    </TableRow>

    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/telefonoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Teléfono casa" />

        <EditText
            android:id="@+id/telefonoEducando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/TableRow"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <TextView
            android:id="@+id/sectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:text="Seccion" />

        <Spinner android:id="@+id/spinnerSeccion" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRoww"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <TextView
            android:id="@+id/etapaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:text="Etapa" />

        <Spinner android:id="@+id/spinnerEtapa" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/list_selector_background" 
        android:clickable="true" >

        <TextView
            android:id="@+id/padresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:text="Padres" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/list_selector_background" 
        android:clickable="true" >

    </TableRow>

</TableLayout>
    </ScrollView>

</RelativeLayout>