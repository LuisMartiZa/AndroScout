<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="5dip"
    android:stretchColumns="1" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/nameActividadText"
            android:layout_marginLeft="5dip"
            android:text="Nombre:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/participantesText"
            android:layout_marginLeft="5dip"
            android:text="Nº Participantes:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participantesActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/descripText"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:text="Descripción"
            android:textStyle="bold" />

    </TableRow>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/descripActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="TextView" />
            
            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</TableLayout>